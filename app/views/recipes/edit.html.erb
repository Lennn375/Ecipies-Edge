<div class="wrapper">
  <h1 class="title fw-bold">New recipe</h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :name %>
    <%= f.input :instructions %>
    <%= f.input :servings %>
    <%= f.input :cooking_time %>
    <%= f.input :ingredients %>
    <%= f.input :image, as: :file, input_html: { value: @recipe.image} %>
    <%= f.button :submit, "Update", class: "btn-save" %>
  <% end %>
</div>
