<div class="wrapper">
  <h3 class="mb-3 d-flex justify-content-center"><%= current_user.username %>'s cookbook</h3>
  <hr>
  <div class="d-flex justify-content-center mx-5">
    <%= link_to new_collection_path, class: "btn-cta" do %>
      New Category
    <% end %>
  </div>
  <div class="items d-flex flex-column gap-3 mt-3">
    <% @collections.each do |collection| %>
      <%= render "shared/cookbook-item", collection: collection %>
    <% end %>
  </div>
  <br>
</div>
