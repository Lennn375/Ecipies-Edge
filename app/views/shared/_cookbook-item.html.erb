<div class="cookbook-items">
  <div class="cookbook-item">
    <div class="description">
      <% if collection %>
        <h3><%= collection.name %></h3>
        <p><%= pluralize(collection.user_recipes.count, 'recipe') %></p>
      </div>
      <% if collection && !collection.user_recipes.empty? && collection.user_recipes.last.recipe.image.attached? %>
        <%= cl_image_tag collection.user_recipes.last.recipe.image.key, class: "img-circle" %>
      <% else %>
        <%= image_tag("img_holder.png") %>
      <% end %>
    <% else %>
      <p>You have no collection</p>
    <% end %>
  </div>
</div>
