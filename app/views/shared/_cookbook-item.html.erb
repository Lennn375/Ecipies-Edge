<%= link_to collection_path(collection) do %>
  <div class="cookbook-items">
    <div class="cookbook-item">
      <div class="description">
        <% if collection %>
          <h3 class="mb-3"><%= collection.name.capitalize %></h3>
          <p><%= pluralize(collection.user_recipes.count, 'recipe') %></p>
        </div>
        <% if collection && !collection.user_recipes.empty? && collection.user_recipe_collections.last.user_recipe.recipe.image.attached? %>
          <%= cl_image_tag collection.user_recipe_collections.last.user_recipe.recipe.image.key, class: "img-circle" %>
        <% else %>
          <% if collection.name == "Favorites" %>
            <%= image_tag "heart.png", class: "img-circle" %>
          <% else %>
            <%= image_tag "cookbook-img-holder.png", class: "img-circle" %>
          <% end %>
        <% end %>
      <% else %>
        <p>Your cookbook is empty</p>
      <% end %>
    </div>
  </div>
<% end %>
