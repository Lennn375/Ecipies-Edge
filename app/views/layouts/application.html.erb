<!DOCTYPE html>
<html>
  <head>
    <title>EcipiesEdge</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
    <div class="body-content">
      <%= yield %>
    </div>
    <footer class="text-center text-lg-start bg-dark">
      <div class="container d-flex justify-content-center py-3">
        <button type="button" class="btn btn-primary btn-lg btn-floating mx-2 bg-dark">
          <%= link_to root_path, class:"footer-icon" do %>
            <i class="fas fa-house"></i>
          <%end %>
        </button>
        <button type="button" class="btn btn-primary btn-lg btn-floating mx-2 bg-dark">
          <%= link_to  recipes_path, class: "bg-transparent" do%>
            <i class="fas fa-book"></i>
          <% end %>
        </button>
        <button type="button" class="btn btn-primary btn-lg btn-floating mx-2 bg-dark">
          <%= link_to user_recipes_path  do %>
            <i class="fas fa-basket-shopping"></i>
          <% end %>
        </button>
        <button type="button" class="btn btn-primary btn-lg btn-floating mx-2 bg-dark">
          <i class="fas fa-utensils"></i>
        </button>
      </div>
      <!-- Copyright -->
      <%# <div class="text-center text-white p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2020 Copyright:
        <a class="text-white" href="#">EcipesEdge</a>
      </div> %>
      <!-- Copyright -->
    </footer>
    <!-- End of .container -->
  </body>
</html>
