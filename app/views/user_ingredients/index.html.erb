<div class="wrapper">
  <h3 class="mb-2">Your ingredient list</h3>
  <%= link_to 'add new ingredient(s)', ingredients_path %>

  <% @categories.each do |category|%>
    <div class="card border-light mb-3" style="max-width: 18rem;">
      <div class="card-header"><%= category.name.capitalize %></div>
        <% @user_ingredients.each do |user_ingredient|%>
          <% if user_ingredient.category_ids.include?(category.id) %>
            <%# <div class="card-body"> %>
              <%# <p class="card-text"> %>
                <span class="badge"><%= user_ingredient.ingredient.name %>
                  <%= link_to delete_user_ingredient_path(user_ingredient), data: {turbo_method: :delete} do%>
                    <i class="fa-solid fa-circle-minus"></i>
                  <% end %>
                </span>
              <%# </p> %>
            <%# </div> %>
          <% end %>
        <% end %>
    </div>
  <% end %>
</div>
