<div class="wrapper">
  <h3 class="mb-2">Your ingredient list</h3>
  <%= link_to 'add new ingredient(s)', ingredients_path %>
  <% @user_ingredients.each do |user_ingredient| %>
    <span class="badge">
      <li><%= user_ingredient.ingredient.name %>
        <%= link_to delete_user_ingredient_path(user_ingredient), data: {turbo_method: :delete} do%>
          <i class="fa-solid fa-circle-minus"></i>
        <% end %>
      </li>
    </span>
  <% end %>
</ul>
